package com.mj.example.impl;

import junit.framework.TestCase;

public class ExampleComponentTest extends TestCase {
	private ExampleComponent example = new ExampleComponent();
    public void testSayHello() throws Exception {
    	assertEquals("Hello Stefan", new ExampleComponent().sayHello("Stefan"));
    }
    
    public void testAnswerTo() throws Exception {
    	assertEquals("Bob say : How you doing?",
    			new ExampleComponent().anwserFrom("Bob", "How you doing?"));
    }
}
